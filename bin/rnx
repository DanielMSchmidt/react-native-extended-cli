#!/bin/bash
script=$1
scriptPath=${BASH_SOURCE[0]%/*}/../scripts/$script.sh
shift

PATH=$PATH:./node_modules/.bin
export PATH

node ./bin/update-notifier.js

if [ -z "$script" ]; then
    echo "======================="
    echo "Welcome to rnx, the React Native Extended CLI!" 
    echo "You didn't specify a command, so I'll exit now."
    echo "======================="
    exit
fi

if [ -f $scriptPath ]; then
    sh ${BASH_SOURCE[0]%/*}/../scripts/$script.sh $@
else
    react-native $script $@
fi 



